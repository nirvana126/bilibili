<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gansj.bilibili.mapper.VideoViewMapper">

    <resultMap id="BaseResultMap" type="com.gansj.bilibili.dao.VideoView">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="videoId" column="video_id" jdbcType="BIGINT"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="clientId" column="client_id" jdbcType="VARCHAR"/>
            <result property="ip" column="ip" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,video_id,user_id,
        client_id,ip,create_time
    </sql>
    <select id="getVideoViews" parameterType="java.util.Map" resultType="com.gansj.bilibili.dao.VideoView">
        select
               *
        from
            video_view
        where
            video_id=#{videoId}
        <if test="userId!=null">
            and user_id=#{userId}
        </if>
        <if test="userId==null and clientId!=null">
            and client_id=#{clientId} and user_id is null
        </if>
        <if test="ip!=null and ip!=''">
            and ip=#{ip}
        </if>
        <if test="today!=null and today!=''">
            and DATE_FORMAT(create_time,'%Y-%m-%d')=#{today};
        </if>
    </select>
</mapper>
