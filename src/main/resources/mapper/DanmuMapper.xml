<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gansj.bilibili.mapper.DanmuMapper">

    <resultMap id="BaseResultMap" type="com.gansj.bilibili.dao.Danmu">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="videoId" column="video_id" jdbcType="BIGINT"/>
            <result property="content" column="content" jdbcType="VARCHAR"/>
            <result property="danmuTime" column="danmu_time" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,video_id,
        content,danmu_time,create_time
    </sql>
    <select id="getDanmus" parameterType="java.util.Map" resultType="com.gansj.bilibili.dao.Danmu">
        select * from danmu
        where video_id=#{videoId}
        <if test="startDate !=null and startDate !=''">
            and create_time <![CDATA[>=]]> #{startDate}
        </if>
        <if test="endDate !=null and endDate !=''">
            and create_time <![CDATA[<=]]> #{endDate}
        </if>
    </select>
</mapper>
