<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gansj.bilibili.mapper.AuthRoleMenuMapper">

    <resultMap id="AuthMenuResultMap" type="com.gansj.bilibili.dao.AuthRoleMenu">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="roleId" column="role_id" jdbcType="BIGINT"/>
        <result property="menuId" column="menu_id" jdbcType="BIGINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <association property="authMenu" javaType="com.gansj.bilibili.dao.AuthMenu">
            <id column="name" property="name"/>
            <id column="code" property="code"/>
        </association>
    </resultMap>

    <sql id="Base_Column_List">
        id,role_id,menu_id,
        create_time
    </sql>
    <select id="getAuthRoleMenusByRoleIds" parameterType="java.util.Set" resultMap="AuthMenuResultMap">
        select arm.*,am.name,am.code
        from bilibili.auth_role_menu arm
        left join bilibili.auth_menu am on arm.menu_id=am.id
        where arm.role_id in
        <foreach collection="roleIdSet" item="roleId" index="index" open="(" close=")" separator=",">
            #{roleId}
        </foreach>
    </select>
</mapper>
